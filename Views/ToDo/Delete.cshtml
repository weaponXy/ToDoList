@model ToDoList.Models.Todo

@{
    ViewData["Title"] = "Delete To-Do";
}

<h2>Delete To-Do</h2>

<h4>Are you sure you want to delete this?</h4>
<div>
    <strong>Title:</strong> @Model.Title<br />
    <strong>Completed:</strong> @Model.IsCompleted<br />
    <strong>Category:</strong> @Model.Category<br />
    <strong>Priority:</strong> @Model.Priority<br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>
